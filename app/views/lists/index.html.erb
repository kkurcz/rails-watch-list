<!-- app/views/articles/index.html.erb -->
<%#= cl_image_tag("ueuyynqohoueavm5mln6",
      width: 400, height: 300, crop: :fill) %>


<div class="container" id="lists">
  <h1 class="header">Your lists</h1>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="col-6">
        <div class="card-category2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <h1>
            <%= link_to list.name, list_path(list) %>
          </h1>
        </div>

        <div class="container">
          <div class="row flex-nowrap scrollableRow">
            <% list.bookmarks.each do |bookmark| %>
              <div class="pl-0 mb-4 col-3">
                <div class="list-movie-card">
                  <img src="<%= bookmark.movie.poster_url %>" alt="">
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

