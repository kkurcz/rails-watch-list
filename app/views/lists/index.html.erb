<div class="container" id="new-list">
    <h3>Create a new list</h3>
  <%= simple_form_for(@list) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit %>
    <%=  %>
  <% end %>
</div>
